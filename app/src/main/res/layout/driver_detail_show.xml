<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_backgroud"
        android:elevation="10dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/driver_poster"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/u"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="3dp" />

                <TextView
                    android:id="@+id/name_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-black"
                    android:padding="5dp"
                    android:text="DriverName"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_man" />

                <TextView
                    android:id="@+id/driverNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-black"
                    android:padding="5dp"
                    android:text="8910282656"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_call" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/linear_layout1"
                android:background="@drawable/border_backgroud"
                android:elevation="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/OwnweName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="OwnerName - Md Sahil"
                    android:textAlignment="center"
                    android:textColor="#CD4C4949" />

                <TextView
                    android:id="@+id/ownerPhoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="5dp"
                    android:text="OwnerPhoneNo - 795952092904"
                    android:textAlignment="center"
                    android:textColor="#CD4C4949" />

                <TextView
                    android:id="@+id/car_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:padding="5dp"
                    android:text="VehicleName - Mahindra Scorpion"
                    android:textAlignment="center"
                    android:textColor="#CD4C4949" />

                <TextView
                    android:id="@+id/car_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:padding="5dp"
                    android:text="VehicleNo - WB140 FS432 "
                    android:textAlignment="center"
                    android:textColor="#D24C4949" />

                <TextView
                    android:id="@+id/car_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:padding="5dp"
                    android:text="VehicleType - Goods"
                    android:textAlignment="center"
                    android:textColor="#D04C4949" />

            </LinearLayout>

            <View
                android:id="@+id/base_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/linear_layout2"
                android:layout_marginEnd="5dp"
                android:background="#27171616"
                android:elevation="8dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/base_line"
                >

                <ImageView
                    android:id="@+id/driver_Location"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="15dp"
                    android:padding="5dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_location"
                    android:layout_toLeftOf="@+id/chat_driver"
                    />
                <ImageView
                    android:id="@+id/chat_driver"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="15dp"
                    android:padding="5dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_chat"
                    android:layout_toLeftOf="@+id/call_driver"
                    />
                <ImageView
                    android:id="@+id/call_driver"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="15dp"
                    android:padding="5dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_call"
                    android:layout_alignParentEnd="true"
                    />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="serif"
                    android:padding="5dp"
                    android:text="Distance - 3 miles away"
                    android:textColor="#1C1A1A" />

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>