<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_backgroud"
        android:elevation="8dp"
        app:cardCornerRadius="3dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/posterImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:elevation="5dp"
                    android:src="@drawable/u"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_overlay="true"
                    app:civ_border_width="3dp" />

                <TextView
                    android:id="@+id/r_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_border"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_man"
                    android:elevation="5dp"
                    android:fontFamily="serif"
                    android:layout_marginBottom="3dp"
                    android:padding="10dp"
                    android:text="RequesterName "
                    android:textColor="#AB0E0D0D"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear2"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_backgroud"
                android:elevation="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:clickable="false"
                    android:padding="5dp"
                    android:text="@string/pickup_address"
                    android:textColor="#AB0B0B0B"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/grey_border"
                    android:elevation="5dp"
                    android:fontFamily="monospace"
                    android:padding="8dp"
                    android:text="kolkata, west bengal,7001414,nangi,ghumar,unnamed road"
                    android:textAlignment="center"
                    android:textColor="#C6100F0F"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:padding="5dp"
                    android:text="@string/delivery_address"
                    android:textColor="#A6151414"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/grey_border"
                    android:elevation="5dp"
                    android:fontFamily="monospace"
                    android:padding="8dp"
                    android:text="kolkata, west bengal,7001414,nangi,ghumar,unnamed road"
                    android:textAlignment="center"
                    android:textColor="#C30B0A0A"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/distance1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:padding="5dp"
                    android:text="PickUp distance - 23 miles away"
                    android:textColor="#C30B0A0A" />

                <TextView
                    android:id="@+id/distance2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="monospace"
                    android:padding="5dp"
                    android:text="Delivery distance - 23 miles away"
                    android:textColor="#C30B0A0A" />
            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:elevation="8dp"
                android:layout_below="@+id/linear"
                android:background="#40171616" />
            <RelativeLayout
                android:layout_below="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/chat"
                    android:src="@drawable/ic_location" />
                <ImageView
                    android:id="@+id/call"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_call"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    />

                <ImageView
                    android:id="@+id/chat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/call"
                    android:src="@drawable/ic_chat" />

                <TextView
                    android:id="@+id/weightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content weight - 175 kg"
                    android:fontFamily="monospace"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="3dp"
                    android:padding="8dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

        </RelativeLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>